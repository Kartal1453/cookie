function nextImage(){if(!!document.querySelector('.c-items')){document.querySelector('.c-items').onmouseover = function(event) {
  if(event.target.tagName == 'IMG'||event.target.classList.contains("next-image")||event.target.classList.contains("previous-image")){if(!event.target.closest('.picture-box').querySelectorAll("img")[0].classList.contains("hidden")){event.target.closest('.picture-box').querySelectorAll("img")[1].src = event.target.closest('.picture-box').querySelectorAll("img")[1].dataset.src; setTimeout(function(){event.target.closest('.picture-box').querySelectorAll("img")[0].classList.add("hidden"); event.target.closest('.picture-box').querySelectorAll("img")[1].classList.remove("hidden");if(event.target.closest('.picture-box').querySelectorAll("img")[2])event.target.closest('.picture-box').querySelectorAll("img")[2].classList.add("hidden");
  }, 350);}};
  
  
  if(event.target.dataset.index == "1"){
  event.target.closest(`.picture-box`).onmouseleave  = function(event) {
  if(event.target.closest('.picture-box').querySelectorAll("img")[0].classList.contains("hidden")){ setTimeout(function(){event.target.closest('.picture-box').querySelectorAll("img")[1].classList.add("hidden");event.target.closest('.picture-box').querySelectorAll("img")[0].classList.remove("hidden");if(event.target.closest('.picture-box').querySelectorAll("img")[2])event.target.closest('.picture-box').querySelectorAll("img")[2].classList.add("hidden");}, 350); 
}
};
  }
};

                                                         }};

 ready();
    function ready() {
      if (document.readyState == "loading") {
        nextImage()
          document.addEventListener("DOMContentLoaded", nextImage)
      } else {
          nextImage()
      }
    }
  document.addEventListener("DOMContentLoaded", function () {
    nextImage();
    var dom_observer = new MutationObserver(function (mutation) {
      nextImage();
    });
    var container = document.body;
    var configs = { attributes: false, childList: true, characterData: false };
    dom_observer.observe(container, configs);
  });


